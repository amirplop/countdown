+        <canvas id="starfield"></canvas>
+        <main class="app">
+            <span class="badge">Live Dreamscape</span>
+            <h1>Stellar Wish Studio</h1>
+            <p>
+                Click to drop a new constellation, move your mouse to bend the starlight, and let the
+                cosmic engine compose a personal wish for you.
+            </p>
+            <section class="panel">
+                <div class="wish" id="wish">"Every spark you send comes back brighter."</div>
+                <div class="controls">
+                    <button id="newWish">Generate new wish</button>
+                    <button id="burst">Release starburst</button>
+                </div>
+                <div class="orbital">
+                    <span id="starCount">Stars: 0</span>
+                    <span id="constellations">Constellations: 0</span>
+                    <span id="spark">Spark intensity: Calm</span>
+                </div>
+            </section>
+        </main>
+        <script>
+            const canvas = document.getElementById("starfield");
+            const ctx = canvas.getContext("2d");
+            const wishOutput = document.getElementById("wish");
+            const starCountOutput = document.getElementById("starCount");
+            const constellationsOutput = document.getElementById("constellations");
+            const sparkOutput = document.getElementById("spark");
+            const newWishButton = document.getElementById("newWish");
+            const burstButton = document.getElementById("burst");
+
+            const wishes = [
+                "Your next idea will glow louder than doubt.",
+                "Every step you take bends the universe in your favor.",
+                "Today is a perfect day to surprise yourself.",
+                "You carry a galaxy of calm inside you.",
+                "Momentum follows the way you show up.",
+                "Your kindness is a meteor shower for someone else.",
+                "The dream you keep returning to is ready.",
+                "Your future self is already grateful.",
+            ];
+
+            const stars = [];
+            const constellations = [];
+            const pointer = { x: 0, y: 0 };
+            let sparkLevel = 0;
+
+            const resize = () => {
+                canvas.width = window.innerWidth * window.devicePixelRatio;
+                canvas.height = window.innerHeight * window.devicePixelRatio;
+                ctx.scale(window.devicePixelRatio, window.devicePixelRatio);
+            };
+
+            const createStar = () => ({
+                x: Math.random() * window.innerWidth,
+                y: Math.random() * window.innerHeight,
+                radius: Math.random() * 1.8 + 0.4,
+                speed: Math.random() * 0.3 + 0.1,
+                hue: 220 + Math.random() * 80,
+            });
+
+            const populateStars = () => {
+                stars.length = 0;
+                const total = Math.floor(window.innerWidth / 6);
+                for (let i = 0; i < total; i += 1) {
+                    stars.push(createStar());
+                }
+            };
+
+            const addConstellation = (x, y) => {
+                const nodes = Array.from({ length: 5 }, () => ({
+                    x: x + (Math.random() - 0.5) * 120,
+                    y: y + (Math.random() - 0.5) * 120,
+                }));
+                constellations.push({ nodes, life: 1 });
+            };
+
+            const drawBackground = () => {
+                ctx.clearRect(0, 0, canvas.width, canvas.height);
+                ctx.fillStyle = "rgba(4, 4, 15, 0.2)";
+                ctx.fillRect(0, 0, canvas.width, canvas.height);
+
+                stars.forEach((star) => {
+                    star.y += star.speed;
+                    if (star.y > window.innerHeight + 10) {
+                        star.y = -10;
+                        star.x = Math.random() * window.innerWidth;
+                    }
+                    const glow = sparkLevel * 0.04;
+                    ctx.beginPath();
+                    ctx.fillStyle = `hsla(${star.hue}, 80%, 70%, ${0.8 + glow})`;
+                    ctx.shadowColor = `hsla(${star.hue}, 90%, 70%, ${0.6 + glow})`;
+                    ctx.shadowBlur = 10 + glow * 30;
+                    ctx.arc(star.x, star.y, star.radius + glow, 0, Math.PI * 2);
+                    ctx.fill();
+                });
+            };
+
+            const drawConstellations = () => {
+                constellations.forEach((constellation) => {
+                    constellation.life -= 0.003;
+                    ctx.strokeStyle = `rgba(140, 185, 255, ${constellation.life})`;
+                    ctx.lineWidth = 1.2;
+                    ctx.beginPath();
+                    constellation.nodes.forEach((node, index) => {
+                        const offsetX = (pointer.x - window.innerWidth / 2) * 0.002;
+                        const offsetY = (pointer.y - window.innerHeight / 2) * 0.002;
+                        const x = node.x + offsetX * 40;
+                        const y = node.y + offsetY * 40;
+                        if (index === 0) {
+                            ctx.moveTo(x, y);
+                        } else {
+                            ctx.lineTo(x, y);
+                        }
+                        ctx.fillStyle = "rgba(255,255,255,0.85)";
+                        ctx.beginPath();
+                        ctx.arc(x, y, 3.2, 0, Math.PI * 2);
+                        ctx.fill();
+                    });
+                    ctx.stroke();
+                });
+                while (constellations.length && constellations[0].life <= 0) {
+                    constellations.shift();
+                }
+            };
+
+            const updateStats = () => {
+                starCountOutput.textContent = `Stars: ${stars.length}`;
+                constellationsOutput.textContent = `Constellations: ${constellations.length}`;
+                const label = sparkLevel > 12 ? "Radiant" : sparkLevel > 6 ? "Bright" : "Calm";
+                sparkOutput.textContent = `Spark intensity: ${label}`;
+            };
+
+            const loop = () => {
+                drawBackground();
+                drawConstellations();
+                sparkLevel = Math.max(0, sparkLevel - 0.05);
+                updateStats();
+                requestAnimationFrame(loop);
+            };
+
+            newWishButton.addEventListener("click", () => {
+                const pick = wishes[Math.floor(Math.random() * wishes.length)];
+                wishOutput.textContent = `"${pick}"`;
+                sparkLevel = Math.min(20, sparkLevel + 6);
+            });
+
+            burstButton.addEventListener("click", () => {
+                sparkLevel = 18;
+                for (let i = 0; i < 3; i += 1) {
+                    addConstellation(
+                        Math.random() * window.innerWidth,
+                        Math.random() * window.innerHeight
+                    );
+                }
+            });
+
+            window.addEventListener("mousemove", (event) => {
+                pointer.x = event.clientX;
+                pointer.y = event.clientY;
+            });
+
+            window.addEventListener("click", (event) => {
+                addConstellation(event.clientX, event.clientY);
+                sparkLevel = Math.min(20, sparkLevel + 4);
+            });
+
+            window.addEventListener("resize", () => {
+                resize();
+                populateStars();
+            });
+
+            resize();
+            populateStars();
+            addConstellation(window.innerWidth / 2, window.innerHeight / 2);
+            loop();
         </script>
     </body>
 </html>
 
